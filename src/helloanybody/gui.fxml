<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.*?>
<GridPane xmlns:fx="http://javafx.com/fxml/1" hgap="10.0" vgap="10.0"
          xmlns="http://javafx.com/javafx/8.0.65" fx:controller="helloanybody.Controller">
    <Button fx:id="buttonSay"
            maxHeight="1.7976931348623157E308"
            maxWidth="1.7976931348623157E308"
            mnemonicParsing="false"
            onAction="#handleButtonAction" text="Say Hello" GridPane.columnIndex="1"/>
    <TextField fx:id="textFieldName"
               onAction="#handleButtonAction"
    />
    <padding>
        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
    </padding>
    <columnConstraints>
        <ColumnConstraints/>
        <ColumnConstraints/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints/>
    </rowConstraints>
</GridPane>
